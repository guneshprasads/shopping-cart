<div style ="background-color: #ADD8E6;height: 700px;margin-top:0px;text-decoration-color: white; " >
<%= link_to "Minmum_Price_Products",min_path%>  /  <%= link_to "Maximum_Price_Products",max_path%><br/>

<h2>
  <%= link_to "Categories", root_path %> /
  <%= @category.title %> /
  Products
</h2>

<ol>
  <% @products.each do |product| %>
    <li>
      <%= product.title %> (<%= product.price %>)

      <%= form_tag order_items_path do %>
        <%= hidden_field_tag :product_id, product.id %>
        <%= number_field_tag :quantity, 1 %>
        <%= submit_tag "Add to Cart" %>
      <% end %>

      <ul>
        <% product.variants.each do |variant| %>
          <li><%= variant.title %> (<%=  variant.price %>)</li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ol>
</div>
